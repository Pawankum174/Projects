{
  "info": {
    "name": "VaultCore Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:8081/vaultcore/api/auth/register" },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"pawan\",\n  \"password\": \"secret123\",\n  \"email\": \"pawan@example.com\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:8080/api/auth/login" },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"pawan\",\n  \"password\": \"secret123\"\n}"
        }
      }
    },
    {
      "name": "Token Refresh",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "http://localhost:8080/api/auth/token/refresh" },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh_token\": \"<paste_refresh_token_here>\"\n}"
        }
      }
    },
    {
      "name": "Protected Endpoint (User Info)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <paste_access_token_here>" }
        ],
        "url": { "raw": "http://localhost:8080/api/users/me" }
      }
    }
  ]
}
